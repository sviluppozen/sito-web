---
import type { AstroSeoProps } from "@astrolib/seo";
import Articles from "@components/blog/Articles.astro";
import Layout from "../../layouts/layout.astro";

const seo: AstroSeoProps = {
	title: "SviluppoZen Blog: Insights on Web Development and SEO",
	description:
		"Explore the SviluppoZen Blog for the latest trends, tips, and insights in web development and SEO. Stay updated with our innovative digital solutions.",
	canonical: "https://sviluppozen.it/blog/",
	openGraph: {
		url: "https://sviluppozen.it/blog",
		title: "SviluppoZen Blog: Insights on Web Development and SEO",
		description:
			"Stay informed with the latest in web development and SEO on the SviluppoZen Blog. Expert advice, tips, and industry insights await you.",
		images: [
			{
				url: "https://sviluppozen.it/opengraph/social-og.jpg",
				width: 1200,
				height: 630,
				alt: "Social open graph image of SviluppoZen Blog",
				type: "image/jpeg",
			},
			{
				url: "https://sviluppozen.it/opengraph/twitter-og.jpg",
				width: 4096,
				height: 4096,
				alt: "Twitter open graph image of SviluppoZen Blog",
				type: "image/jpeg",
			},
		],
		site_name: "SviluppoZen",
	},
	twitter: {
		cardType: "summary_large_image",
	},
};
---

<Layout title={seo.title} description={seo.description}>
	<Articles />
</Layout>
