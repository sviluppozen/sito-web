---
import Layout from "../layouts/layout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import ThankYou from "@components/infopages/ThankYou.astro";

const seo: AstroSeoProps = {
	title: "Thank You - SviluppoZen: Message Sent Successfully",
	description:
		"Thank you for reaching out to SviluppoZen! Your message has been successfully sent. We appreciate your interest and will respond promptly.",
	canonical: "https://sviluppozen.it/thank-you/",
	noindex: true,
	nofollow: true,
